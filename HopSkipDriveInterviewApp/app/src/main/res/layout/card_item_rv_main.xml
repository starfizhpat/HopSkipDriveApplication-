<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/main_header_topBorder"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#808080"/>

    <TextView
        android:id="@+id/main_dayOfWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="DAY"

        android:layout_marginLeft="15dp"

        app:layout_constraintTop_toTopOf="@id/main_Est"
        app:layout_constraintBottom_toBottomOf="@id/main_totalPrice"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/main_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="DATE"
        android:layout_marginLeft="6dp"
        app:layout_constraintTop_toTopOf="@id/main_dayOfWeek"
        app:layout_constraintBottom_toBottomOf="@id/main_dayOfWeek"
        app:layout_constraintLeft_toRightOf="@id/main_dayOfWeek"
        />

    <TextView
        android:id="@+id/main_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="\u25CF"
        app:layout_constraintLeft_toRightOf="@id/main_date"
        app:layout_constraintTop_toTopOf="@id/main_dayOfWeek"
        app:layout_constraintBottom_toBottomOf="@id/main_dayOfWeek"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        />

    <TextView
        android:id="@+id/main_time_vFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="4:28a"
        app:layout_constraintLeft_toRightOf="@id/main_period"
        app:layout_constraintTop_toTopOf="@id/main_dayOfWeek"
        app:layout_constraintBottom_toBottomOf="@id/main_dayOfWeek"
        android:layout_marginLeft="6dp"

        />

    <TextView
        android:id="@+id/main_time_dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="-"
        app:layout_constraintLeft_toRightOf="@id/main_time_vFirst"
        app:layout_constraintTop_toTopOf="@id/main_dayOfWeek"
        app:layout_constraintBottom_toBottomOf="@id/main_dayOfWeek"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/main_time_vLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="4:26p"
        app:layout_constraintLeft_toRightOf="@id/main_time_dash"
        app:layout_constraintTop_toTopOf="@id/main_dayOfWeek"
        app:layout_constraintBottom_toBottomOf="@id/main_dayOfWeek"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/main_Est"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="ESTIMATED"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/main_totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="$105.25"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintRight_toRightOf="@id/main_Est"
        app:layout_constraintTop_toBottomOf="@id/main_Est"
        app:layout_constraintBottom_toBottomOf="@id/main_dayOfWeek"

        />
    <ImageView
        android:id="@+id/main_header_bottomBorder"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/main_totalPrice"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#80808080"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_one"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/main_header_bottomBorder"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/card_starToEnd_time_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4:00a - 5:00a"
                android:textSize="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                />

            <TextView
                android:id="@+id/card_numRiders_numBooster_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(2 riders)"
                android:textSize="10dp"
                app:layout_constraintLeft_toRightOf="@id/card_starToEnd_time_1"
                app:layout_constraintBottom_toBottomOf="@id/card_starToEnd_time_1"
                android:paddingLeft="5dp"/>

            <TextView
                android:id="@+id/card_price_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$60.71"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/card_starToEnd_time_1"
                android:layout_marginRight="8dp"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="est."
                android:textSize="10dp"
                android:layout_marginRight="5dp"
                app:layout_constraintRight_toLeftOf="@id/card_price_1"
                app:layout_constraintBottom_toBottomOf="@id/card_price_1"/>

            <TextView
                android:id="@+id/card_add_one_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1."
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/card_starToEnd_time_1"
                app:layout_constraintLeft_toLeftOf="@id/card_starToEnd_time_1"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/card_add_two_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2."
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/card_add_one_1"
                app:layout_constraintLeft_toLeftOf="@id/card_starToEnd_time_1"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/card_add_three_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3."
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/card_add_two_1"
                app:layout_constraintLeft_toLeftOf="@id/card_starToEnd_time_1"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_two"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/card_one"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/card_starToEnd_time_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4:00a - 5:00a"
                android:textSize="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                />

            <TextView
                android:id="@+id/card_numRiders_numBooster_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(2 riders)"
                android:textSize="10dp"
                app:layout_constraintLeft_toRightOf="@id/card_starToEnd_time_2"
                app:layout_constraintBottom_toBottomOf="@id/card_starToEnd_time_2"
                android:paddingLeft="5dp"/>

            <TextView
                android:id="@+id/card_price_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$60.71"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/card_starToEnd_time_2"
                android:layout_marginRight="8dp"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="est."
                android:textSize="10dp"
                android:layout_marginRight="5dp"
                app:layout_constraintRight_toLeftOf="@id/card_price_2"
                app:layout_constraintBottom_toBottomOf="@id/card_price_2"/>

            <TextView
                android:id="@+id/card_add_one_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1."
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/card_starToEnd_time_2"
                app:layout_constraintLeft_toLeftOf="@id/card_starToEnd_time_2"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/card_add_two_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2."
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/card_add_one_2"
                app:layout_constraintLeft_toLeftOf="@id/card_starToEnd_time_2"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/card_add_three_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3."
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/card_add_two_2"
                app:layout_constraintLeft_toLeftOf="@id/card_starToEnd_time_2"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_three"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/card_two"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/card_starToEnd_time_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4:00a - 5:00a"
                android:textSize="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                />

            <TextView
                android:id="@+id/card_numRiders_numBooster_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(2 riders)"
                android:textSize="10dp"
                app:layout_constraintLeft_toRightOf="@id/card_starToEnd_time_3"
                app:layout_constraintBottom_toBottomOf="@id/card_starToEnd_time_3"
                android:paddingLeft="5dp"/>

            <TextView
                android:id="@+id/card_price_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$60.71"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/card_starToEnd_time_3"
                android:layout_marginRight="8dp"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="est."
                android:textSize="10dp"
                android:layout_marginRight="5dp"
                app:layout_constraintRight_toLeftOf="@id/card_price_3"
                app:layout_constraintBottom_toBottomOf="@id/card_price_3"/>

            <TextView
                android:id="@+id/card_add_one_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1."
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/card_starToEnd_time_3"
                app:layout_constraintLeft_toLeftOf="@id/card_starToEnd_time_3"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/card_add_two_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2."
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/card_add_one_3"
                app:layout_constraintLeft_toLeftOf="@id/card_starToEnd_time_3"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/card_add_three_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3."
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/card_add_two_3"
                app:layout_constraintLeft_toLeftOf="@id/card_starToEnd_time_3"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>